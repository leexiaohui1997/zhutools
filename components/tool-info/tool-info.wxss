.tool {
  width: 100%;
  padding-top: 100%;
  position: relative;
}
.tool-inner {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 20%;
  background: rgba(194, 70, 41, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: absolute;
}
.tool-logo {
  width: 38.2%;
  height: 38.2%;
  border-radius: 26%;
  margin: 16rpx 0;
}
.tool-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #17264c;
}
